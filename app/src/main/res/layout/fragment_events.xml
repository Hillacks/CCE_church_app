<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".EventsFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/cce_icon" />

    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="29dp"
        android:text="Sun. Worship and service"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="@string/event"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/ThursdayView"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:src="@drawable/cce_icon" />

    <TextView
        android:id="@+id/thursday_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:text="Thur. Worship and service"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/thursday_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thursday_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="@string/thursdayevent"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/fridayView4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163dp"
        android:src="@drawable/cce_icon" />

    <TextView
        android:id="@+id/friday_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thursday_event"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="89dp"
        android:text="Fri.Youth Meeting "
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/friday_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friday_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="@string/fridayevent"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/satView4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="251dp"
        android:src="@drawable/cce_icon" />

    <TextView
        android:id="@+id/sat_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friday_date"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="44dp"
        android:text="Sat. Iron Sharpens Iron"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saturday_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sat_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="@string/saturdayevent"
        android:textSize="10dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fblive"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/fblive"
                android:backgroundTintMode="@integer/material_motion_duration_short_2"/>

            <ImageView
                android:id="@+id/youtube3"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_below="@id/fblive"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/youtube3"
                android:contentDescription="Live Service Sunday" />

            <ImageView
                android:id="@+id/announcements"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_below="@id/youtube3"
                android:layout_alignEnd="@+id/youtube3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/announcements" />

            <ImageView
                android:id="@+id/giving"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_below="@id/announcements"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/giving" />

            <ImageView
                android:id="@+id/baptism"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_below="@id/giving"
                android:layout_alignStart="@+id/giving"
                android:layout_alignEnd="@+id/giving"
                android:layout_marginStart="0dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/baptism" />

            <ImageView
                android:id="@+id/prayer_requests"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_below="@id/baptism"
                android:layout_alignStart="@+id/baptism"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/prayerrequest" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_below="@id/fblive"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail"
                android:layout_below="@id/name"
                android:textSize="10dp"
                />

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/name"
                android:layout_alignParentTop="true"
                android:layout_marginTop="225dp"
                android:layout_marginEnd="-198dp"
                android:text="Log out" />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>